#!/usr/bin/expect -f

set user [exec whoami]
set pwd [lindex $argv 0]
set pwd [regsub {\(.*} $pwd ""]
spawn sudo login $user
set timeout 2
expect "\[sudo\] password for $user: "
send "$pwd\r"
set timeout 2
expect "Password:"
send "$pwd\r"
set timeout 4
expect "\[sudo\] password for $user: "
send "\x04\r"
interact
